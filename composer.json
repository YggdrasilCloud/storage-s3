{
    "name": "yggdrasilcloud/storage-s3",
    "description": "Amazon S3 storage adapter bridge for YggdrasilCloud",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "aws/aws-sdk-php": "^3.333",
        "symfony/config": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "yggdrasilcloud/core": "^0.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "infection/infection": "^0.31",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpro/grumphp": "^2.17",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4",
        "symfony/phpunit-bridge": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "YggdrasilCloud\\StorageS3\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YggdrasilCloud\\StorageS3\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "require": "^7.3"
        }
    },
    "scripts": {
        "lint": "parallel-lint --colors src tests",
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse --memory-limit=1G",
        "test": "phpunit --no-coverage",
        "infection": "infection --threads=4",
        "qual": [
            "@cs:check",
            "@stan"
        ],
        "ci": [
            "@lint",
            "@cs:check",
            "@stan",
            "@test"
        ],
        "all": [
            "@lint",
            "@cs:check",
            "@stan",
            "@test",
            "@infection"
        ]
    }
}
